<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                tools:context=".ui.fragment.CategoryFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_top_apps_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/fragment_top_apps_item_corner_radius">

        <ImageView
            android:id="@+id/fragment_top_apps_image"
            android:layout_width="@dimen/frag_top_apps_size_image"
            android:layout_height="@dimen/frag_top_apps_size_image"
            android:layout_gravity="center"
            android:clickable="false"
            android:background="@android:color/background_light"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/fragment_top_apps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_top_apps_image_container"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/fragment_top_app_item_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
</RelativeLayout>
